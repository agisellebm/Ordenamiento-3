            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFCF0707" Offset="1"/>
                <GradientStop Color="#FF820C0C" Offset="0.732"/>
                <GradientStop Color="#FF410606" Offset="0.379"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="lstNumeros" HorizontalAlignment="Left" Height="368" Margin="10,26,0,0" VerticalAlignment="Top" Width="156"/>
        <Button Content="Ordenar Shell" HorizontalAlignment="Left" Height="37" Margin="194,26,0,0" VerticalAlignment="Top" Width="179" FontFamily="GothicI" FontSize="20" Click="Button_Click"/>
        <Button Content="Ordenar Bubble" HorizontalAlignment="Left" Height="37" Margin="430,26,0,0" VerticalAlignment="Top" Width="180" FontFamily="GothicI" FontSize="20" Click="Button_Click_1"/>

    </Grid>
